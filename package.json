{
  "name": "tmv",
  "version": "1.0.0",
  "author": "Daniel Reszka <dannn.r@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "api",
    "e2e",
    "mailcatcher",
    "ui"
  ],
  "scripts": {
    "watch": "env-cmd run-p -l 'mc watch' 'api watch' 'ui watch'",
    "lint": "yarn eslint --cache . ",
    "api": "env-cmd yarn workspace api run",
    "e2e": "env-cmd yarn workspace e2e run",
    "mc": "env-cmd yarn workspace mailcatcher run",
    "ui": "env-cmd yarn workspace ui run"
  },
  "husky": {
    "hooks": {
      "pre-push": "run-s 'lint' 'api test:once'"
    }
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4"
  }
}