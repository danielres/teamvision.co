{
  "name": "tmv",
  "version": "1.0.0",
  "author": "Daniel Reszka <dannn.r@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "api",
    "db",
    "e2e",
    "mailcatcher",
    "ui"
  ],
  "scripts": {
    "watch": "env-cmd run-p -l 'db up' 'mc watch' 'api watch' 'ui watch'",
    "db:replay": "run-s -c 'db drop' 'db create' 'db migrate'",
    "db:replay:all": "(NODE_ENV=test yarn db:replay) & (NODE_ENV=e2e yarn db:replay) & (NODE_ENV=dev yarn db:replay)",
    "test": "run-s test:*",
    "test:api": "NODE_ENV=test yarn api test:once",
    "test:e2e": "NODE_ENV=e2e run-p -r watch 'e2e test:once'",
    "lint": "yarn eslint --cache . ",
    "api": "env-cmd yarn workspace api run",
    "db": "env-cmd yarn workspace db run",
    "e2e": "NODE_ENV=e2e env-cmd yarn workspace e2e run",
    "mc": "env-cmd yarn workspace mailcatcher run",
    "ui": "env-cmd yarn workspace ui run"
  },
  "husky": {
    "hooks": {
      "pre-push": "run-s 'lint' 'api test:once'"
    }
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4"
  }
}