{
  "name": "api",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "yarn test:once --watch",
    "test:once": "env-cmd jest --verbose --runInBand",
    "store:up": "env-cmd run-s 'dc up'",
    "store:replay": "run-s 'knex migrate:rollback' 'knex migrate:latest'",
    "store:test:replay": "NODE_ENV=test yarn store:replay",
    "store:destroy": "env-cmd run-s 'dc down' 'dc rm -f'",
    "store:stop:all": "docker stop $(docker ps -aq)",
    "dc": "docker-compose -f store/docker-compose.yml",
    "knex": "env-cmd knex --knexfile store/knexfile.js --esm"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "babel-jest": "^25.2.6",
    "env-cmd": "^10.1.0",
    "jest": "^25.2.6",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "db-errors": "^0.2.3",
    "esm": "^3.2.25",
    "knex": "^0.20.13",
    "lodash": "^4.17.15",
    "pg": "^8.0.0"
  }
}
