{
  "name": "api",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "run-p store:up dev:server",
    "dev:server": "NODE_ENV=development env-cmd -f .env nodemon -r esm src",
    "e2e": "NODE_ENV=test env-cmd -f .env nodemon -r esm src",
    "test": "yarn test:once --watch",
    "test:once": "NODE_ENV=test env-cmd jest --verbose --runInBand",
    "store:up": "env-cmd run-s 'dc up'",
    "store:replay": "NODE_ENV=development run-s 'knex migrate:rollback' 'knex migrate:latest'",
    "store:test:replay": "NODE_ENV=test run-s 'knex migrate:rollback' 'knex migrate:latest'",
    "store:destroy": "env-cmd run-s 'dc down' 'dc rm -f'",
    "store:stop:all": "docker stop $(docker ps -aq)",
    "dc": "docker-compose -f store/docker-compose.yml",
    "knex": "env-cmd knex --knexfile store/knexfile.js --esm"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "babel-jest": "^25.2.6",
    "env-cmd": "^10.1.0",
    "jest": "^25.2.6",
    "lolex": "^6.0.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "apollo-server": "^2.10.1",
    "apollo-server-express": "^2.10.0",
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^1.4.0",
    "db-errors": "^0.2.3",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.20.13",
    "lodash": "^4.17.15",
    "mailgen": "^2.0.10",
    "node-fetch": "^2.6.0",
    "nodemailer": "^6.4.6",
    "pg": "^8.0.0",
    "shortid": "^2.2.15",
    "supertest": "^4.0.2",
    "winston": "^3.2.1",
    "yup": "^0.28.3"
  }
}
